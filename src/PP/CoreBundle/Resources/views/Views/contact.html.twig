{# empty Twig template #}
{% extends "PPCoreBundle::layout.html.twig" %}

{% block pp_body %}
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Contactez moi !</h1>
                    <p>Si vous avez des questions n'hésitez pas à me contacter ! </p>
                    
                    {{ form_start(form) }}
                    <div class='form-group col-lg-4'>
                            {{ form_widget(form.name, {'attr': {'class': 'form-control form-border'} }) }}
                        </div>
                        <div class='form-group col-lg-4'>
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control form-border'} }) }}
                        </div>
                        <div class='form-group col-lg-4'>
                            {{ form_widget(form.mail, {'attr': {'class': 'form-control form-border'} }) }}
                        </div>
                        <div class='form-group col-lg-12'>
                            {{ form_widget(form.message, {'attr': {'class': 'form-control form-msg form-border'} }) }}
                        </div>
                        <div class='form-group col-lg-4'>
                            {{ form_widget(form.envoyer, {'attr': {'class': 'submit btn btn-default'} }) }}
                        </div>
                        
                    </div>
                    {{ form_end(form) }}  
                </div>
            </div>
        </div>
    </div>
    
   
{% endblock %}
