        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <h2>Dernières recettes ajoutées</h2>
                    {% for recette in recettes %}
                        {{ include("PPCoreBundle:Views:bloc.html.twig") }}
                    {% endfor %}
                </div>
            </div>
        </div>
                
        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <h2>Dernières astuces ajoutées</h2>
                    {% for astuce in astuces %}
                        <div class="col-sm-3 text-center"> 
                            <div class="text-img border-astuce">
                                <h4>{{ astuce.title }}</h4>
                                <a class="link-profil" href="{{ path('core_astuce',{'id':astuce.id}) }}">Voir l'astuce</a>
                                <p>Ajouté le {{ astuce.date | date('d/m/Y') }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>      
        
        
